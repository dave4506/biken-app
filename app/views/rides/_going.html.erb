<%= form_for(current_user.active_relationships.
                        build(ride_id: ride.id),
                        remote: true) do |f| %>
  <div><%= hidden_field_tag :ride_id, ride.id %></div>
  <%= f.submit "Going", class: "btn btn-lg" %><br>
  <h5>People going: <%= ride.attendees.count %></h5>
<% end %>
